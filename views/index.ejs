
<%- include('partials/header') %>

  <main class="flex-fill bg-light">
    <div class="container py-5 px-4">
    <div class="d-sm-flex justify-content-between align-items-center mb-4">
      <div>
        <h3 class="mb-1 fw-semibold"> Welcome to Dashboard</h3>
        <p class="text-muted mb-0">Here you can manage your employees, tasks, and workspace efficiently.</p>
      </div>
      <button class="btn btn-primary px-4 py-2 mt-3 mt-sm-0" onclick="showForm()">
        <i class="bi bi-person-plus-fill me-1"></i> Add Employee
      </button>
    </div>
    </div>


      <!-- Modal Form -->
      <div class="modal fade" id="employeeModal" tabindex="-1" aria-labelledby="employeeModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg">
          <div class="modal-content shadow">
            <form action="/add-employee" method="POST" class="p-3">
              <div class="modal-header border-0">
                <h5 class="modal-title fw-bold" id="employeeModalLabel">Add New Employee</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-body row g-3 px-3">
                <div class="col-md-6">
                  <label class="form-label">Employee ID</label>
                  <input type="text" name="id" class="form-control" placeholder="Enter employee ID" required />
                </div>
                <div class="col-md-6">
                  <label class="form-label">Full Name</label>
                  <input type="text" name="name" class="form-control" placeholder="Enter employee name" required />
                </div>
                <div class="col-md-6">
                  <label class="form-label">Balance($)</label>
                  <input type="number" name="balance" class="form-control" placeholder="Enter balance" required />
                </div>

                <div class="col-md-6">
                  <label class="form-label">Level</label>
                  <select name="level" class="form-select" required>
                    <option value="" disabled selected>Select level</option>
                    <option value="JUNIOR">Junior</option>
                    <option value="MIDDLE">Middle</option>
                    <option value="SENIOR">Senior</option>
                  </select>
                </div>

                <div class="col-md-6">
                  <label class="form-label">Role</label>
                  <select name="role" class="form-select" required>
                    <option selected disabled>Select Role</option>
                    <option value="UI Designer">UI-UX Graphics Designer</option>
                    <option value="Cyber Security">Cyber Security</option>
                    <option value="Frontend Developer">Frontend Developer</option>
                    <option value="Backend Developer">Backend Developer</option>
                    <option value="Full-Stack Developer">Full-Stack Developer</option>
                  </select>
                </div>


                <div class="col-md-6">
                  <label class="form-label">Department</label>
                  <select name="department" class="form-select">
                    <option selected disabled>Select Department</option>
                    <option value="Marketing">Marketing</option>
                    <option value="Sales">Sales</option>
                    <option value="HR">HR</option>
                    <option value="Development">Development</option>
                    <option value="Finance">Finance</option>
                  </select>
                </div>


                <div class="col-md-6">
                  <label class="form-label">Email</label>
                  <input type="email" name="email" class="form-control" placeholder="Enter Email Address" required />
                </div>

                <div class="col-md-6">
                  <label class="form-label">Phone</label>
                  <input type="text" name="phone" class="form-control" placeholder="Enter Mobile No" pattern="[0-9]{10}"
                    required />
                </div>
              </div>
              <div class="modal-footer border-0 px-4">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-primary px-4">Save Employee</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </main>

  <script>
    function showForm() {
      const modal = new bootstrap.Modal(document.getElementById('employeeModal'));
      modal.show();
    }
  </script>

  <%- include('partials/footer') %>